{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "outDir": "./dist/",
        "rootDir": "./src/",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "sourceMap": true
    },
    "files": [
        "./src/index.ts"
    ],
    "include": [
        "./src/**/*"
    ]
}